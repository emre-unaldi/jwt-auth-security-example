<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${hostName} --- [%15.15t] %-40.40c{1.} : %m%n%ex
        </Property>
        <Property name="APP_LOG_ROOT">./logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Application Log Appender -->
        <RollingFile name="ApplicationAppender"
                     fileName="${APP_LOG_ROOT}/auth-service.log"
                     filePattern="${APP_LOG_ROOT}/auth-service-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Security Log Appender -->
        <RollingFile name="SecurityAppender"
                     fileName="${APP_LOG_ROOT}/auth-security.log"
                     filePattern="${APP_LOG_ROOT}/auth-security-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Error Log Appender -->
        <RollingFile name="ErrorAppender"
                     fileName="${APP_LOG_ROOT}/auth-error.log"
                     filePattern="${APP_LOG_ROOT}/auth-error-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Application Loggers -->
        <Logger name="com.example.authservice" level="debug" additivity="false">
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Security Loggers -->
        <Logger name="com.example.authservice.security" level="debug" additivity="false">
            <AppenderRef ref="SecurityAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <Logger name="org.springframework.security" level="debug" additivity="false">
            <AppenderRef ref="SecurityAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Database Loggers -->
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" additivity="false">
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Framework Loggers -->
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <Logger name="org.springframework.web" level="debug" additivity="false">
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="ApplicationAppender"/>
            <AppenderRef ref="ErrorAppender" level="error"/>
        </Root>
    </Loggers>
</Configuration>